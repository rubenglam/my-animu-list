---
import { getSeasonAnimes } from '../services/get-season-animes'

const animes = await getSeasonAnimes()
console.log(animes.data[0].images)
---

<section>
  <h3>Seasonal animes</h3>
  <div>
    {
      animes.data.map(anime => (
        <article>
          <img src={anime.images.webp.image_url} alt={anime.title} />
          <footer>{anime.title}</footer>
        </article>
      ))
    }
  </div>
</section>

<style>
  h3 {
    margin-bottom: 12px;
  }

  section > div {
    border: 1px solid #444;
    padding: 6px;
    border-radius: 6px;
    display: flex;
    width: 100%;
    overflow-x: scroll;
    gap: 6px;
    grid-template-columns: repeat(4, minmax(0, 1fr));
  }
  article {
    position: relative;
    border-radius: 6px;
  }
  article img {
    width: 180px;
    aspect-ratio: 2/3;
    border-radius: 6px;
  }
  article footer {
    margin-top: 4px;
    text-align: center;
    font-size: 0.8rem;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    padding: 8;
  }
</style>
